	<element name="Weaver's Emerald" type="Magic Item" source="Game of Fate" id="ID_GAMEOFFATE_RINGS_MAGIC_ITEM_WEAVERS_EMERALD">
		<description>
			<p>While wearing this ring, you gain the power Weaver's Mind. This grants the ability to reroll with advantage any failed Intelligence Skill Check once per day.</p>
		</description>
		<setters>
			<set name="category">Rings</set>
			<set name="type">Ring</set>
			<set name="rarity">Very Rare</set>
			<set name="slot">ring</set>
			<set name="equippable">true</set>
			<set name="attunement">false</set>
		</setters>
	</element>
